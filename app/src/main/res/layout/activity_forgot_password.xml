<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Lite_Secondary_Shrine_Pink_100"
    android:screenOrientation="portrait"
    tools:context=".Forgot_Password.Forgot_Password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TitleTvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:text="Forget Password"
            android:textColor="@color/Dark_shrine_Pink"
            android:textSize="20sp" />

        <View
            android:id="@+id/viewPartition"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/TitleTvForgotPassword"
            android:layout_marginTop="10dp"
            android:background="@color/Primary_Shrine_Pink_900" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/viewPartition"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/forgotpassword" />



        <EditText
            android:id="@+id/EtForgotPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/animation_view"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/dark_border"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/Dark_shrine_Pink"
            android:padding="10dp"
            android:textColorHint="@color/Dark_shrine_Pink" />

        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textSize="12sp"
            android:textColor="@color/Dark_shrine_Pink"
            android:layout_below="@id/EtForgotPasswordEmail"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"/>



        <Button
            android:id="@+id/btnForgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backToLogin"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/Dark_shrine_Pink"
            app:cornerRadius="10dp"
            android:padding="5dp"
            android:text="Forget Password"
            android:textColor="@color/Lite_Secondary_Shrine_Pink_100" />











    </RelativeLayout>

</LinearLayout>